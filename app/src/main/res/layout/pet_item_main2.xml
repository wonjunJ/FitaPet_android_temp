<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pet_item_root2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pet_list_layout2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/animal_btn"
        android:padding="10dp">

        <TextView
            android:id="@+id/pet_list_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="토토"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pet_list_breed"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="도베르만 3세"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/pet_list_name"
            app:layout_constraintTop_toBottomOf="@+id/pet_list_name" />

        <TextView
            android:id="@+id/pet_list_birth"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="2018년 10월"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/pet_list_breed"
            app:layout_constraintTop_toBottomOf="@+id/pet_list_name" />

        <TextView
            android:id="@+id/pet_list_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="소/중"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/pet_list_birth"
            app:layout_constraintTop_toBottomOf="@+id/pet_list_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>